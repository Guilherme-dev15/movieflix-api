{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Filmes",
    "description": "API para gerenciamento de filmes, permitindo a criação, leitura, atualização e exclusão de filmes.",
    "version": "1.0.0"
  },
  "paths": {
    "/api/movies": {
      "get": {
        "tags": [
          "Filmes"
        ],
        "summary": "Obter todos os filmes",
        "description": "Retorna uma lista de todos os filmes disponíveis na base de dados, com suporte a paginação.",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Número de filmes a serem retornados (padrão: 10).",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Número de filmes a serem pulados (padrão: 0).",
            "schema": {
              "type": "integer",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de filmes retornada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Movie"
                  }
                },
                "examples": {
                  "example1": {
                    "value": [
                      {
                        "id": 1,
                        "title": "O Poderoso Chefão",
                        "genre_id": 1,
                        "language_id": 1,
                        "oscar_count": 3,
                        "release_date": "1972-03-24"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Filmes"
        ],
        "summary": "Cadastrar um novo filme",
        "description": "Adiciona um novo filme ao banco de dados. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MovieInput"
              },
              "examples": {
                "example1": {
                  "value": {
                    "title": "A Chegada",
                    "genre_id": 3,
                    "language_id": 1,
                    "oscar_count": 1,
                    "release_date": "2016-11-10"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Filme cadastrado com sucesso."
          },
          "401": {
            "description": "Não autorizado."
          },
          "409": {
            "description": "Já existe um filme cadastrado com este título."
          },
          "500": {
            "description": "Falha ao cadastrar um filme."
          }
        }
      }
    },
    "/api/movies/{id}": {
      "get": {
        "tags": [
          "Filmes"
        ],
        "summary": "Buscar filme por ID",
        "description": "Retorna um filme específico com base no ID fornecido.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do filme a ser buscado.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Filme encontrado com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Movie"
                }
              }
            }
          },
          "404": {
            "description": "Filme não encontrado."
          },
          "500": {
            "description": "Erro interno do servidor."
          }
        }
      },
      "put": {
        "tags": [
          "Filmes"
        ],
        "summary": "Atualizar um filme existente",
        "description": "Atualiza as informações de um filme com base no ID fornecido. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do filme a ser atualizado.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MovieInput"
              },
              "examples": {
                "example1": {
                  "value": {
                    "title": "O Poderoso Chefão Parte II",
                    "genre_id": 1,
                    "language_id": 1,
                    "oscar_count": 6,
                    "release_date": "1974-12-20"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Filme atualizado com sucesso."
          },
          "401": {
            "description": "Não autorizado."
          },
          "404": {
            "description": "Filme não encontrado."
          },
          "500": {
            "description": "Erro interno do servidor."
          }
        }
      },
      "delete": {
        "tags": [
          "Filmes"
        ],
        "summary": "Remover um filme",
        "description": "Remove um filme da base de dados com base no ID fornecido. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do filme a ser removido.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Filme removido com sucesso."
          },
          "401": {
            "description": "Não autorizado."
          },
          "404": {
            "description": "Filme não encontrado."
          },
          "500": {
            "description": "Não foi possível remover o filme."
          }
        }
      }
    },
    "/api/movies/genre/{genreName}": {
      "get": {
        "tags": [
          "Filmes"
        ],
        "summary": "Filtrar filmes por gênero e idioma",
        "description": "Retorna uma lista de filmes filtrados pelo gênero e/ou idioma especificado.",
        "parameters": [
          {
            "name": "genreName",
            "in": "path",
            "required": true,
            "description": "Nome do gênero do filme.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "languageName",
            "in": "query",
            "required": false,
            "description": "Nome do idioma para filtrar (opcional)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de filmes filtrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "example": 123
                      },
                      "title": {
                        "type": "string",
                        "example": "Filme Exemplo"
                      },
                      "genres": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 1
                          },
                          "name": {
                            "type": "string",
                            "example": "Ação"
                          }
                        }
                      },
                      "languages": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 1
                          },
                          "name": {
                            "type": "string",
                            "example": "Português"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno ao filtrar filmes",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Falha ao filtrar filmes"
                }
              }
            }
          }
        }
      }
    },
    "/api/movies/language/{languageName}": {
      "get": {
        "tags": [
          "Filmes"
        ],
        "summary": "Filtrar filmes por idioma",
        "description": "Retorna uma lista de filmes filtrados pelo idioma especificado.",
        "parameters": [
          {
            "name": "languageName",
            "in": "path",
            "required": true,
            "description": "Nome do idioma do filme.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de filmes filtrados por idioma retornada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Movie"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nenhum filme encontrado para este idioma."
          },
          "500": {
            "description": "Erro interno ao filtrar filmes por idioma."
          }
        }
      }
    },
    "/api/users/register": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Criar um novo usuário",
        "description": "Cadastra um novo usuário com nome de usuário, email e senha.\n**Nota de Segurança:** As senhas são criptografadas antes do armazenamento.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCreate"
              },
              "example": {
                "username": "john_doe",
                "email": "john@example.com",
                "password": "Str0ngP@ss!"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso."
          },
          "400": {
            "description": "Dados de entrada inválidos.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Missing required fields"
                }
              }
            }
          },
          "409": {
            "description": "Conflito - Usuário já existe.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Usuário já cadastrado"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Erro no servidor"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Login de usuário",
        "description": "Autentica um usuário e retorna um token JWT para acesso a rotas protegidas.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "john_doe"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "Str0ngP@ss!"
                  }
                },
                "required": [
                  "username",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful, returns JWT token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Missing username or password"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Invalid username or password"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Erro no servidor"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/genre/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Buscar gênero por ID",
        "description": "Retorna um gênero de filme específico com base no ID fornecido.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do gênero a ser buscado.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Gênero encontrado com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Genre"
                }
              }
            }
          },
          "404": {
            "description": "Gênero não encontrado."
          },
          "500": {
            "description": "Erro interno do servidor."
          }
        }
      }
    },
    "/api/users/language/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Buscar idioma por ID",
        "description": "Retorna um idioma de filme específico com base no ID fornecido.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do idioma a ser buscado.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Idioma encontrado com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Language"
                }
              }
            }
          },
          "404": {
            "description": "Idioma não encontrado."
          },
          "500": {
            "description": "Erro interno do servidor."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserCreate": {
        "type": "object",
        "required": [
          "username",
          "email",
          "password"
        ],
        "properties": {
          "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50,
            "example": "john_doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "maxLength": 100,
            "example": "john@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "minLength": 8,
            "example": "Str0ngP@ss!",
            "description": "Must contain at least:\n- 8 characters\n- 1 uppercase letter\n- 1 lowercase letter\n- 1 number\n- 1 special character"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "Movie": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID do filme."
          },
          "title": {
            "type": "string",
            "description": "Título do filme."
          },
          "genre_id": {
            "type": "integer",
            "description": "ID do gênero do filme."
          },
          "language_id": {
            "type": "integer",
            "description": "ID do idioma do filme."
          },
          "oscar_count": {
            "type": "integer",
            "description": "Quantidade de Oscars ganhos pelo filme."
          },
          "release_date": {
            "type": "string",
            "format": "date",
            "description": "Data de lançamento do filme."
          }
        }
      },
      "MovieInput": {
        "type": "object",
        "required": [
          "title",
          "genre_id",
          "language_id",
          "oscar_count",
          "release_date"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Título do filme."
          },
          "genre_id": {
            "type": "integer",
            "description": "ID do gênero do filme."
          },
          "language_id": {
            "type": "integer",
            "description": "ID do idioma do filme."
          },
          "oscar_count": {
            "type": "integer",
            "description": "Quantidade de Oscars ganhos pelo filme."
          },
          "release_date": {
            "type": "string",
            "format": "date",
            "description": "Data de lançamento do filme."
          }
        }
      },
      "Genre": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Language": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}