{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Filmes",
        "description": "API para gerenciamento de filmes, permitindo a criação, leitura, atualização e exclusão de filmes.",
        "version": "1.0.0"
    },
    "paths": {
        "/movies": {
            "get": {
                "tags": ["Filmes"],
                "summary": "Obter todos os filmes",
                "description": "Retorna uma lista de todos os filmes disponíveis na base de dados.",
                "responses": {
                    "200": {
                        "description": "Lista de filmes retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Movie"
                                    }
                                },
                                "examples": {
                                    "example1": {
                                        "value": [
                                            {
                                                "id": 1,
                                                "title": "O Poderoso Chefão",
                                                "genre_id": 1,
                                                "language_id": 1,
                                                "oscar_count": 3,
                                                "release_date": "1972-03-24"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/movies/{id}": {
            "put": {
                "tags": ["Filmes"],
                "summary": "Atualizar um filme existente",
                "description": "Atualiza as informações de um filme com base no ID fornecido.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do filme a ser atualizado.",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/MovieInput"
                            },
                            "examples": {
                                "example1": {
                                    "value": {
                                        "title": "O Poderoso Chefão Parte II",
                                        "genre_id": 1,
                                        "language_id": 1,
                                        "oscar_count": 6,
                                        "release_date": "1974-12-20"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Filme atualizado com sucesso."
                    },
                    "404": {
                        "description": "Filme não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "delete": {
                "tags": ["Filmes"],
                "summary": "Remover um filme",
                "description": "Remove um filme da base de dados com base no ID fornecido.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do filme a ser removido.",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Filme removido com sucesso."
                    },
                    "404": {
                        "description": "Filme não encontrado."
                    },
                    "500": {
                        "description": "Não foi possível remover o filme."
                    }
                }
            }
        },
        "/movies/genre/{genreName}": {
            "get": {
                "tags": ["Filmes"],
                "summary": "Obter filmes por gênero",
                "description": "Retorna uma lista de filmes filtrados pelo gênero especificado.",
                "parameters": [
                    {
                        "name": "genreName",
                        "in": "path",
                        "required": true,
                        "description": "Nome do gênero do filme.",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de filmes do gênero especificado retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Movie"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Gênero não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/movies/language/{languageName}": {
            "get": {
                "tags": ["Filmes"],
                "summary": "Obter filmes por idioma",
                "description": "Retorna uma lista de filmes filtrados pelo idioma especificado.",
                "parameters": [
                    {
                        "name": "languageName",
                        "in": "path",
                        "required": true,
                        "description": "Nome do idioma do filme.",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de filmes do idioma especificado retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Movie"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Idioma não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Movie": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID do filme."
                    },
                    "title": {
                        "type": "string",
                        "description": "Título do filme."
                    },
                    "genre_id": {
                        "type": "integer",
                        "description": "ID do gênero do filme."
                    },
                    "language_id": {
                        "type": "integer",
                        "description": "ID do idioma do filme."
                    },
                    "oscar_count": {
                        "type": "integer",
                        "description": "Quantidade de Oscars ganhos pelo filme."
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "description": "Data de lançamento do filme."
                    }
                }
            },
            "MovieInput": {
                "type": "object",
                "required": [
                    "title",
                    "genre_id",
                    "language_id",
                    "oscar_count",
                    "release_date"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Título do filme."
                    },
                    "genre_id": {
                        "type": "integer",
                        "description": "ID do gênero do filme."
                    },
                    "language_id": {
                        "type": "integer",
                        "description": "ID do idioma do filme."
                    },
                    "oscar_count": {
                        "type": "integer",
                        "description": "Quantidade de Oscars ganhos pelo filme."
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "description": "Data de lançamento do filme."
                    }
                }
            }
        }
    }
}
